@using Genealogi.ViewModels
@model EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Person.Id" />
            <div class="form-group">
                <label asp-for="Person.Name" class="control-label"></label>
                <input asp-for="Person.Name" class="form-control" />
                <span asp-validation-for="Person.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.LastName" class="control-label"></label>
                <input asp-for="Person.LastName" class="form-control" />
                <span asp-validation-for="Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.BirthDate" class="control-label"></label>
                <input asp-for="Person.BirthDate" class="form-control" />
                <span asp-validation-for="Person.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.DeathDate" class="control-label"></label>
                <input asp-for="Person.DeathDate" class="form-control" />
                <span asp-validation-for="Person.DeathDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.BirthPlace" class="control-label"></label>
                <input asp-for="Person.BirthPlace" class="form-control" />
                <span asp-validation-for="Person.BirthPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.DeathPlace" class="control-label"></label>
                <input asp-for="Person.DeathPlace" class="form-control" />
                <span asp-validation-for="Person.DeathPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.MotherId" class="control-label"></label>
                    <select asp-for="Person.MotherId" class="form-control" style="color:#000">
                        @foreach(var str in Model.ParentOptions)
                        {
                            <option>@str</option>
                        }
                       
                    </select>
                <span asp-validation-for="Person.MotherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.FatherId" class="control-label"></label>
                <select asp-for="Person.FatherId" class="form-control" asp-items="ViewBag.FatherId" style="color:#000">
                    @foreach(var str in Model.ParentOptions)
                    {
                        <option>@str</option>
                    }
                </select>
                <span asp-validation-for="Person.FatherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Image" class="control-label"></label>
                <input asp-for="Person.Image" class="form-control" />
                <span asp-validation-for="Person.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>